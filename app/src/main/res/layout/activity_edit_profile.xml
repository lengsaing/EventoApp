<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/gradient_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/profile_pic_New"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:src="@drawable/education"
                app:civ_border_color="#EEEEEE"
                app:civ_border_width="4dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="10"
                app:civ_shadow_color="#8BC34A"
                />

            <Button
                android:id="@+id/profilePicEdit"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="Change Profile Picture"
                android:textSize="12sp"
                android:fontFamily="@font/lato_bold"
                android:background="@drawable/btn_main_custom"
                />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:textSize="21sp"
                android:fontFamily="@font/lato_bold"
                android:textColor="@android:color/white"
                />
        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">
        <ImageView
            android:id="@+id/ic_email"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/message"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ic_email"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:hint="Email"
            android:gravity="center_horizontal"
            android:textSize="14sp"
            android:fontFamily="@font/lato_regular"
            />
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">
            <ImageView
                android:id="@+id/ic_pwd"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/padlock"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/pwdEditText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ic_pwd"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:hint="Password"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:fontFamily="@font/lato_regular"
                />
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">
        <ImageView
            android:id="@+id/ic_address"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/address"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/addressEditText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ic_address"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:hint="Address"
            android:gravity="center_horizontal"
            android:textSize="14sp"
            android:fontFamily="@font/lato_regular"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">
        <ImageView
            android:id="@+id/ic_phone"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/outgoing_call"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ic_phone"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:hint="Phone Number"
            android:gravity="center_horizontal"
            android:textSize="14sp"
            android:fontFamily="@font/lato_regular"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/lato_black"
        android:textSize="18sp"
        android:text="Save Changes"
        android:background="@drawable/btn_main_custom"
        android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
